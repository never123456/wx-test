.list-wrap {
  padding:20rpx 0;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #000;
  border-radius: 50%;
  vertical-align: middle;
  margin: 0 10rpx 10px 10rpx;
}

.time {
  font-size: 26rpx;
  vertical-align: middle;
}

.img-wrap {
  position: relative;
}

.bcg-img {
  width: 100%;
  height: 400rpx;
}

.title {
  position: absolute;
  left: 0;
  bottom: 5px;
  background: rgba(0, 0, 0, 0.4);
  display: inline-block;
  width: 100%;
  height: auto;
  padding: 10px 20rpx;
  color: #fff;
}

.summary {
  font-size: 30rpx;
  padding: 0 20rpx;
}

.attach-watch-wrap {
  padding: 0 20rpx;
}

.attach {
  margin-right: 20rpx;
}