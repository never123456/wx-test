.title {
  padding: 10px 20rpx;
  height: 60rpx;
  display: block;
  line-height: 60rpx;
}

.author-time {
  padding: 0 0 10px 20rpx;
  font-size: 30rpx;
}

.author {
  margin-right: 40rpx;
}

.img {
  width: 100%;
}

.ope-wrap {
  width: 100%;
  height: 10px 10px;
  display: flex;
  flex-direction: row;
}

.radio {
  height: 80rpx;
  width: 500rpx;
  margin: 0 20px;
  position: relative;
}

.radio-img {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.radio-play {
  height: 80rpx;
  width: 80rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.8;
}

.line {
  height: 40rpx;
  border-bottom: 1px solid #ccc;
  width: 60%;
  position: absolute;
  z-index: -999;
  left: 122rpx;
}

.sc, .share {
  height: 60rpx;
  width: 60rpx;
  margin-top: 10rpx;
}

.context-wrap {
  font-size: 15px;
  text-indent: 2em;
  padding: 10px 20rpx;
  line-height: 26px;
}
